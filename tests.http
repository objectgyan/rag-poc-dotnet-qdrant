Content-Type: application/json
X-API-Key: {{apiKey}}

{
  "name": "Baseline Evaluation v1",
  "config": {
    "minSemanticSimilarity": 0.7,
    "minKeywordMatch": 0.6,
    "minCitationAccuracy": 0.8,
    "maxHallucinationRate": 0.2,
    "useSemanticEvaluation": true,
    "useKeywordEvaluation": true,
    "useLlmAsJudge": false
  }
}

